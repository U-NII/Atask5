<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
     <tr>
       <td><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpeg",size: "40x40" %></td>
       <td><%= link_to book_path(book) do %>
         <%= book.title %>
         <% end %>
       </td>
       <td><%= book.body %></td>
     </tr>
    <% end %>
  </tbody>
</table>
<%= render 'books/footer', user: @user,book: @book %>
