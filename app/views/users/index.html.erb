 <p id="notice">
  <%= notice %>
 </p>
 <div class="container">
  <div class="row">
   <div class="col-md-3">
    <%= render 'books/info', user: @user,book: @book %>
   </div>
   <div class="col-md-8 offset-md-1">
    <%= render 'searchs/form' %>
    <h2>Users</h2>
    <table class="table">
     <thead>
      <tr>
       <th></th>
       <th>image</th>
       <th>name</th>
      </tr>
     </thead>
     <tbody>
     <% @users.each do|user| %>
      <tr>
       <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "40x40" %></td>
       <td><%= user.name %></td>
       <td><%= user.following_user.count %></td>
       <td><%= user.follower_user.count %></td>
       <td><%= link_to "Show",user_path(user) %></td>
      </tr>
     <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>
 <%= render 'books/footer', user: @user,book: @book %>